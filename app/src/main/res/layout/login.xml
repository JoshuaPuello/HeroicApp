<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_width="150sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtName"
        android:hint="Username"
        android:textSize="@dimen/tamanio_campoTexto"
        android:textColorHint="@color/font_button"
        android:background="@drawable/edittext_login_form"
        android:layout_marginTop="@dimen/margin_top_user"
        android:layout_below="@+id/lblEmail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Heroicapp"
        android:layout_width="wrap_content"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:id="@+id/lblEmail"
        android:layout_height="50sp"
        android:layout_marginTop="12sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Omitir >"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:id="@+id/btnOmitir"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="38sp"
        android:layout_width="100sp"
        android:layout_marginBottom="2sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:id="@+id/botonSignUp"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textColor="#000000"
        android:background="@drawable/button_login_form"
        android:layout_width="170sp"
        android:layout_marginTop="@dimen/margin_top_button"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Olvidé mis datos de inicio de sesión"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_width="300sp"
        android:id="@+id/btnOlvideDatos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="@dimen/margin_top_datos"
        android:layout_below="@+id/botonSignUp"
        android:layout_alignLeft="@+id/txtPassword"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_height="38sp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="No tengo una cuenta"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/editText3"
        android:inputType="none"
        android:layout_below="@+id/btnOlvideDatos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_height="20sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:textColor="#000000"
        android:background="@drawable/button_login_form"
        android:layout_width="170sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/botonSignUp"
        android:layout_alignStart="@+id/botonSignUp" />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:hint="Password"
        android:textSize="@dimen/tamanio_campoTexto"
        android:textColorHint="@color/font_button"
        android:background="@drawable/edittext_login_form"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

</RelativeLayout>